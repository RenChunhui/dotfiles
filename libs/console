#!/bin/sh
#
# 日志输出

BOLD=$'\e[1m'
DIM=$'\e[2m'
UNDERLINED=$'\e[4m'

BLACK=$'\e[30m'
RED=$'\e[31m'
GREEN=$'\e[32m'
YELLOW=$'\e[33m'
BLUE=$'\e[34'
GRAY=$'\e[90m'
MAGENTA=$'\e[95m'
CYAN=$'\e[36m'
WHITE=$'\e[97m'

RESET=$'\e[0m'
RESET_BOLD=$'\e[21m'
RESET_DIM=$'\e[22m'

ICON_ASK='?'
ICON_INFO='➜'
ICON_OK='✔'
ICON_WARN='⚠'
ICON_FAIL='✖'
ICON_ARROR_RIGHT="❯"
ICON_STEP='⧗'

# 正确
ok() {
  echo ${GREEN}${ICON_OK}${RESET} ${GRAY}$1${RESET}
}

# 错误
fail() {
  echo ${RED}${ICON_FAIL}${RESET} ${GRAY}$1${RESET}
}

# 警告
warn() {
  echo ${YELLOW}${ICON_WARN}${RESET} ${GRAY}$1${RESET}
}

# 信息
info() {
  echo ${CYAN}${ICON_INFO}${RESET} ${GRAY}$1${RESET}
}
