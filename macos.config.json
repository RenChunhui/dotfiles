{
  "config": [
    {
      "desc": "Configure the Zsh environment",
      "list": [
        {
          "cmd": "git",
          "from": "ohmyzsh/ohmyzsh.git",
          "to": "$HOME/.oh-my-zsh",
          "desc": "ohmyzsh"
        },
        {
          "cmd": "git",
          "from": "zsh-users/zsh-autosuggestions.git",
          "to": "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions",
          "desc": "zsh-autosuggestions"
        },
        {
          "cmd": "git",
          "from": "zsh-users/zsh-syntax-highlighting.git",
          "to": "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting",
          "desc": "zsh-syntax-highlighting"
        },
        {
          "cmd": "git",
          "from": "zsh-users/zsh-completions",
          "to": "$HOME/.oh-my-zsh/custom/plugins/zsh-completions",
          "desc":"zsh-completions"
        },
        {
          "cmd": "cp",
          "from": "$DOTPATH/configs/zsh/zshenv",
          "to": "$HOME/.zshenv",
          "desc":"zshenv"
        },
        {
          "cmd": "cp",
          "from": "$DOTPATH/configs/zsh/zshrc",
          "to": "$HOME/.zshrc",
          "desc":"zshrc"
        }
      ]
    },
    {
      "desc": "Configure the Git environment",
      "list": [
        {
          "cmd": "cp",
          "from": "$HOME/.config/dotfiles/configs/git/.gitmessage",
          "to": "$HOME/.gitmessage",
          "desc": "gitmessage"
        }
      ]
    },
    {
      "desc": "Configure the Tmux environment",
      "list": [
        {
          "cmd": "cp",
          "from": "$HOME/.config/dotfiles/configs/tmux/.tmux.conf",
          "to": "$HOME/.tmux.conf",
          "desc": "tmux"
        }
      ]
    },
    {
      "desc": "Configure the NeoVim environment",
      "list": [
        {
          "cmd": "git",
          "branch": "develop",
          "from": "git://github.com/renchunhui/dotfiles",
          "to": "$HOME/.config/nvim",
          "desc": "neovim"
        }
      ]
    }
  ],
  "install": {
    "brew": [
      {
        "desc": "Homebrew Taps",
        "install": "brew tap --quiet",
        "uninstall": "brew untap",
        "list": [
          {
            "name": "homebrew/cask",
            "desc": "A CLI workflow for the administration of macOS applications distributed as binaries"
          },
          {
            "name": "homebrew/services",
            "desc": "Manage background services with macOS' launchctl daemon manager"
          }
        ]
      },
      {
        "desc": "Homebrew",
        "install": "brew install --quiet",
        "uninstall": "brew uninstall",
        "list": [
          {
            "name": "aria2",
            "desc": "Download with resuming and segmented downloading."
          },
          {
            "name": "wget",
            "desc": "Internet file retriever."
          },
          {
            "name": "node",
            "desc": "Platform built on V8 to build network applications."
          },
          {
            "name": "tmux",
            "desc": "Terminal multiplexer."
          },
          {
            "name": "cloc",
            "desc": "Statistics utility to count lines of code."
          },
          {
            "name": "webp",
            "desc": "Image format providing lossless and lossy compression for web images."
          },
          {
            "name": "postgresql",
            "desc": "Object-relational database system."
          },
          {
            "name": "pnpm",
            "desc": "Fast, disk space efficient package manager."
          },
          {
            "name": "dasel",
            "desc": "JSON, YAML, TOML, XML, and CSV query and modification tool."
          },
          {
            "name": "prettier",
            "desc": "Code formatter for JavaScript, CSS, JSON, GraphQL, Markdown, YAML"
          }
        ]
      },
      {
        "desc": "Homebrew Cask",
        "install": "brew install --cask --quiet",
        "uninstall": "brew uninstall --cask",
        "list": [
          {
            "name": "alfred",
            "desc": "Application launcher and productivity software."
          },
          {
            "name": "clashx",
            "desc": "Rule-based custom proxy with GUI based on clash."
          },
          {
            "name": "visual-studio-code",
            "desc": "Open-source code editor."
          },
          {
            "name": "the-unarchiver",
            "desc": "Unpacks archive files"
          },
          {
            "name": "qingg",
            "desc": "Wubi input method."
          },
          {
            "name": "qq",
            "desc": "Instant messaging tool."
          },
          {
            "name": "wechat",
            "desc": "Free messaging and calling application."
          }
        ]
      },
      {
        "desc": "Quick Look",
        "install": "brew install --cask --quiet",
        "uninstall": "brew uninstall --cask",
        "list": [
          {
            "name": "qlcolorcode",
            "desc": "QuickLook plug-in that renders source code with syntax highlighting."
          },
          {
            "name": "quicklook-json",
            "desc": "JSON preview."
          },
          {
            "name": "qlmarkdown",
            "desc": "Markdown preview."
          }
        ]
      }
    ],
    "code": [
      {
        "desc": "Visual Studio Code Extensions",
        "install": "code --install-extension",
        "uninstall": "code --uninstall-extension",
        "list": [
          {
            "name": "editorconfig.editorconfig",
            "desc": "EditorConfig Support for Visual Studio Code"
          },
          {
            "name": "vscode-icons-team.vscode-icons",
            "desc": "Icons for Visual Studio Code"
          },
          {
            "name": "esbenp.prettier-vscode",
            "desc": "Code formatter using prettier"
          }
        ]
      }
    ],
    "pnpm": [
      {
        "desc": "Language Server Protocol",
        "install": "pnpm add --global",
        "uninstall": "pnpm remove --global",
        "list": [
          {
            "name": "@angular/language-server",
            "desc": "Angular"
          },
          {
            "name": "bash-language-server",
            "desc": "Bash"
          },
          {
            "name": "vscode-langservers-extracted",
            "desc": "HTML/CSS/json"
          },
          {
            "name": "typescript-language-server",
            "desc": "TypeScript"
          },
          {
            "name": "yaml-language-server",
            "desc": "Yaml"
          },
          {
            "name": "@volar/server",
            "desc": "Vue"
          }
        ]
      }
    ]
  }
}
