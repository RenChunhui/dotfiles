#!/bin/sh
#
# 安装所有需要的环境

#######################################
# 帮助
#######################################
usage() {
cat <<EOF
Available commands:

  brew
  code
  emacs
  git
  golang
  iterm
  node
  os
  postgresql
  python
  vim
  zsh
EOF
}

#######################################
# 入口
#######################################
main() {
  case $1 in
    '' | all)
      dm install zsh
      dm install brew
      dm install code
      # dm install emacs
      dm install git
      dm install go
      dm install iterm
      dm install node
      dm install postgresql
      dm install python
      dm install vim
      dm install os
      ;;
    brew)
      sh $BIN_PATH/packages/brew/main.sh
      ;;
    code)
      sh $BIN_PATH/packages/code/main.sh
      ;;
    emacs)
      sh $BIN_PATH/packages/emacs/main.sh
      ;;
    git)
      sh $BIN_PATH/packages/git/main.sh
      ;;
    go)
      sh $BIN_PATH/packages/go/main.sh
      ;;
    iterm)
      sh $BIN_PATH/packages/iterm/main.sh
      ;;
    node)
      sh $BIN_PATH/packages/node/main.sh
      ;;
    os)
      sh $BIN_PATH/packages/os/main.sh
      ;;
    postgresql)
      sh $BIN_PATH/packages/postgresql/main.sh
      ;;
    python)
      sh $BIN_PATH/packages/python/main.sh
      ;;
    vim)
      sh $BIN_PATH/packages/vim/main.sh
      ;;
    zsh)
      sh $BIN_PATH/packages/zsh/main.sh
      ;;
    help)
      usage
      ;;
    *)
      echo "The specified command is invalid. For a list of available
      options,run dm install help."
      ;;
  esac
}

main "$@"
