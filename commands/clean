#!/bin/sh
#
# 清理

source $BIN_PATH/lib/console

case $1 in
'' | 'help')
  cat <<EOF
Available commands:

  all     清理所有缓存
  brew    清理 Homebrew 缓存
  node    清理 Node 缓存
EOF
  ;;
'all')
  dm clean brew
  dm clean node
  ;;
'brew')
  brew cleanup
  ;;
'node')
  npm cache clean --force
  yarn cache clean --force
  ;;
*)
  ;;
esac
