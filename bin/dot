#!/bin/sh

export DOTPATH=$HOME/.config/dotfiles

###############################################################################
# usage                                                                       #
###############################################################################
usage() {
cat <<EOF
Usage: dot [command]

workspace manager cli

Commands:
  clean
  checkhealth
  install
  uninstall
  help
EOF
}


###############################################################################
# main                                                                        #
###############################################################################
main() {
  case $1 in
    install)
      sh $DOTPATH/cmd/install "$2"
      ;;
    uninstall)
      sh $DOTPATH/cmd/uninstall "$2"
      ;;
    clean)
      sh $DOTPATH/cmd/clean "$2"
      ;;
    checkhealth)
      sh $DOTPATH/cmd/checkhealth
      ;;
    help)
      usage
      ;;
  esac
}

main "$@"
